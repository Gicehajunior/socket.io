    "format:fix": "prettier --write 'lib/**/*.ts' 'test/**/*.ts'",
    "prepack": "tsc"
  },
  "dependencies": {
    "debug": "~4.4.1"
  },
  "peerDependencies": {
    "socket.io-adapter": "~2.5.5"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "socket.io",
    "cluster",
    "adapter"
  ]
}
