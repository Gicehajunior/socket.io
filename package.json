    "expect.js": "0.3.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "~3.6.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.7.1",
    "tsx": "~4.20.6",
    "typescript": "~5.9.3"
  },
  "engines": {
