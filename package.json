  "description": "The Socket.IO cluster adapter, allowing to broadcast events between several Socket.IO servers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:socketio/socket.io-cluster-adapter.git"
  },
  "files": [
    "dist/"
  ],
